


<div class="category featured">
  <div class="category-wrap grid wide1 container__large ">
    <h2 class="heading category-heading featured-heading color-text-primary">{{ section.settings.heading }}</h2> 
    <div class="row featured-row">
      {%- if section.settings.collection.products == blank -%}
       {%- for i in (1..4) -%}
       {% render 'cart-product',
          product: product
        %}
       {%- endfor -%}

      {%- elsif section.settings.collection.products != blank -%}         
        {%- for product in section.settings.collection.products limit: section.settings.product_per_row -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when '@app' -%}
                {% render block %}
              {% endcase -%}
            {% endfor -%}
            
          {%- liquid
            if section.settings.collums_product == 1
              assign collumns_product = 'l-12'
            elsif section.settings.collums_product == 2
              assign collumns_product = 'l-6'
            elsif section.settings.collums_product == 3
              assign collumns_product = 'l-4'
            elsif section.settings.collums_product == 4
              assign collumns_product = 'l-3'
            endif
          -%}
          <div class="col {{ collumns_product }} m-3 c-12">
            {% render 'cart-product',
              product: product,
              show_secondary_image: settings.checkbox_show_image,
              show_in_tock: settings.show_in_tock,
              show_sale_badge: settings.show_sale_badge,
              show_low_stock: settings.show_low_stock,
              show_low_quantity: settings.show_low_quantity,
              show_product_rating: settings.show_product_rating,
              low_tock_threshold: settings.low_stock,

            %}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>

    
  </div>
</div>

{% schema %}
{
  "name" : "FEATURED PRODUCT",
  "settings": [
    { 
      "type": "text",
      "label": "Heading",
      "id": "heading",
      "default" : "FEATURED PRODUCT"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "header",
      "content": "Product"
    },
    {
      "type": "range",
      "label": "Number of collums product on desktop",
      "id": "collums_product",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "label": "product per row",
      "id": "product_per_row",
      "min": 1,
      "max": 12,
      "default": 4,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "show_vender",
      "label": "Show vendor",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets":[
    {
      "name" : "Featured product"    
    }
  ]
}
{% endschema %}