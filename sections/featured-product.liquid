
<div class="category featured">
  <div class="category-wrap grid wide1 container__large ">
    <h2 class="heading category-heading featured-heading color-text-primary">{{ section.settings.heading }}</h2> 
    <div class="row featured-row">
      {%- if section.settings.collection.products == blank -%}
       {%- for i in (1..4) -%}
       {% render 'cart-product',
          product: product
        %}
       {%- endfor -%}

      {%- elsif section.settings.collection.products != blank -%}         
        {%- for product in section.settings.collection.products -%}   
          <div class="col l-3 m-3 ">
            {% render 'cart-product',
              product: product,
              show_secondary_image: section.settings.checkbox_show_image
            %}
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name" : "FEATURED PRODUCT",
  "settings": [
    { 
      "type": "text",
      "label": "Heading",
      "id": "heading",
      "default" : "FEATURED PRODUCT"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "checkbox",
      "id": "checkbox_show_image",
      "label": "Show second image on hover"
    }
  ],
  "presets":[
    {
      "name" : "Featured product"    
    }
  ]
}
{% endschema %}