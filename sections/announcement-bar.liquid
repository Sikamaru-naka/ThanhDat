
{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="background-primary container__large container-pc-low">
        <div class="header-above__contain wide-header-above grid">
          <span></span>
          <div class="heading-header text-color">
            {{ block.settings.text }}
          </div>
          <div class="language">
            <select class="laguage-select text-color background-primary">
              <option selected>Italian</option>
              <option >English</option>
              <option >Vietnamese</option>
              <option >Thailand</option>
            </select>
          </div>
        </div>
      </div>
      {% form 'localization' %}
  <select name="language_code">
    {% for language in localization.available_languages %}
      <option value="{{ language.iso_code }}"
        {%- if language == localization.language %} selected="selected"{% endif %}
      >
        {{ language.endonym_name }}
      </option>
    {% endfor %}
  </select>
  
  <input type="submit" value="Update">
{% endform %}
  {% endcase %}
{% endfor %}

    

{% schema %}
{
  "name": "Announcement",
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement ",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text"
        }
      ]
    }
    
  ]
}
{% endschema %}

