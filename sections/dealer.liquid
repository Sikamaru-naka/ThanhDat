
<div class="dealer-container">
  <div class="form-container grid wide2 container__large">
    <div class="form-title title-product">
      <h2 class="heading">
        {{ section.settings.heading }}
      </h2>
      <p class="form-text title-product--text colors-text-secondary ">
        {{ section.settings.subheading }}
      </p>
    </div>

    {%- if form.posted_successfully? -%}
      <div>Gui thanh cong</div> 
    {% endif %} 

    {%- form 'contact' -%}
      <div class="row">
        <div class="col l-6 c-12 m-6 mb-40">
            <label class="form-label" for="title">{{ 'dealer.label.title' | t }}</label>
            <div class="select">
              <select id="title" class="form-select colors-text-secondary" name="contact[title]">
                <option selected value="Miss">Miss</option>
                <option value="Mr">Mr</option>
                <option value="Ms">Ms</option>
                <option value="Mrs">Mrs</option>
              </select>
            </div>
        </div>
        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" for="fname">{{ 'dealer.label.first_name' | t }}*</label>
          <input class="form-input colors-text-secondary" required type="text" name="contact[fname]" id="fname" placeholder='Insert your name' >
        </div>
        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" for="sname">{{ 'dealer.label.sur_name' | t }}*</label>
          <input class="form-input colors-text-secondary" required type="text" name="contact[lname]" id="sname" placeholder='Insert your name' >
        </div>
        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" for="email">{{ 'dealer.label.email' | t }}*</label>
          <input class="form-input colors-text-secondary" required type="email" name="contact[email]" id="email" placeholder='Insert your Email'>
        </div>
        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" for="phone">{{ 'dealer.label.phone' | t }}</label>
          <input class="form-input colors-text-secondary" type="text" name="contact[phone]" id="phone" placeholder='Insert your phone'>
        </div>
        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" for="city">{{ 'dealer.label.city' | t }}</label>
          <input class="form-input colors-text-secondary" type="text" name="contact[city]" id="city" placeholder='Insert your  city'>
        </div>
        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" for="company">{{ 'dealer.label.company' | t }}</label>
          <input class="form-input colors-text-secondary" type="text" name="contact[company]" id="company" placeholder='Insert your company here'>
        </div>
        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" >{{ 'dealer.label.province' | t }}</label>
          <div class="select">
            <select class="form-select" name="contact[province]" >
              <option selected value="Agriento">Agriento</option>
              <option value="Ontario">Ontario </option>
              <option value="Alberta">Alberta</option>
              <option value="Labrador">Labrador</option>
            </select>
          </div>
        </div>

        <div class="col l-6 c-12 m-6 mb-40">
          <label class="form-label" for="company">{{ 'dealer.label.vat_number' | t }}</label>
          <input class="form-input colors-text-secondary" type="text" name="contact[VAT NUMBER]" id="company" placeholder='Insert your VAT number'>
        </div>
      
        <div class="col l-6 c-12 m-6 mb-40">
            <label class="form-label" >{{ 'dealer.label.request' | t }}</label>
            <div class="select">
              <select class="form-select" name="contact[request]">
                <option selected value="Dealer">Dealer</option>
                <option value="Suporter">Suporter </option>
              </select>
            </div>
        </div>

        <div class="col l-12 c-12 mb-50">
          <label class="form-label" for="company">{{ 'dealer.label.request' | t }}</label>
          <input class="form-input colors-text-secondary form-mess" type="text" name="contact[MESSAGE]" id="company" placeholder='Write your message here'>
        </div>

        <div class="form-choose col l-12 c-12 mb-20">
          <input required type="checkbox" name="" id="checked1" >
          <label for="checked1">{{ 'dealer.label.provision_check1' | t }}</label>
        </div>
        <div class="form-choose col l-12 c-12 mb-50">
            <input required type="checkbox" name="" id="checked2">
            <label for="checked2">{{ 'dealer.label.provision_check2' | t }}</label>
        </div>
        <div class="form-choose col l-12 c-12">
          <!-- <input class="btn btn-submit col" type="submit" value="SEND INQUIRY"> -->
          <button class="btn btn-submit col" type="submit">
            {{ 'dealer.label.submit' | t }}
          </button>
        </div>

      </div>
      
    {%- endform -%}
  </div>

</div>

{% schema %}
{
  "name": "Dealer",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BECOME OFFICIAL DE CARLO DEALER"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Exclusive jewels with a contemporary design, handcrafted finished and able to arouse emotions"

    }
  ],
  "presets": [
    {
      "name": "Dealer"
    }
  ]
}
{% endschema %}