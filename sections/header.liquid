{% schema %}
{
  "name": "Header",
  "settings":[
    {
      "type": "select",
      "id": "header_bgc",
      "label": "Color scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background color 1"
        }
      ]
    },
    {
      "type": "header",
      "content": "logo"
    },
    {
      "type": "image_picker",
      "label": "Image logo",
      "id": "logo",
      "info": "200 x 60px .png recommended"
    },
    {
      "type": "range",
      "label": "Logo max width",
      "id": "logo_width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 140
    },
    {
      "type": "range",
      "label": "Logo max width on mobile",
      "id": "logo_width_mobile",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 120
    },
    {
      "type": "select",
      "id": "menu_style",
      "label": "Menu style on large screens",
      "options": [
        {
          "value": "left_left",
          "label": "Logo left, menu left"
        },
        {
          "value": "center_below",
          "label": "Logo center, menu below"
        },
        {
          "value": "left_below",
          "label": "Logo left, menu below"
        },
        {
          "value": "left_center",
          "label": "Logo left, menu center"
        }
      ],
      "default": "left_center"
    },
    {
      "type": "checkbox",
      "id": "sticky",
      "label": "Enable sticky header",
      "info": "Header shows on the screen as customers scroll up."
    },
    {
      "type": "header",
      "content": "navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Menu"
    },
    {
      "type": "header",
      "content": "Collection browsing",
      "info": "Show a list of product collections for better catalogue navigation"
    },
    {
      "type": "checkbox",
      "id": "browsing_menu",
      "label": "Enable collection browsing menu",
      "default": false
    },
    {
      "type": "text",
      "label": "Heading",
      "id": "heading_collection"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Selected collections"
    },
    {
      "type": "header",
      "content": "Social media icons",
      "info": "To display your social media accounts, add them in your theme settings"
    },
    {
      "type": "checkbox",
      "label": "Show social media on mobile",
      "id": "show_social_mobile"
    }
  ]
}
{% endschema %}
