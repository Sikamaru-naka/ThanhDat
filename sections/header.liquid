{% style %}
  .header-logo .logo__width{
    width: {{ section.settings.logo_width }}px;
  }
  @media (max-width: 767px) {
    .header-logo .logo_width_mobile{
      width: {{ section.settings.logo_width_mobile }}px;
    }
  }
{% endstyle %}

{% liquid
  capture logo 
      render 'header-logo'
  endcapture

  capture menu 
      render 'header-menu'
  endcapture

  capture icon 
      render 'header-icon'
  endcapture

  capture icon_search 
      render 'header-icon-search'
  endcapture

  capture icon_user_cart
      render 'header-icon-user-cart'
  endcapture
%}


<div class="header-nav container__large container-pc-low 
    bgc-{{ section.settings.header_bgc }}
    {% if section.settings.sticky %} psfx {% endif %}">
    {%- case section.settings.menu_style -%}
		  {%- when 'left_left' -%}
        <div class="header-nav__contain wide grid">
          {{ logo }}          
          <ul class="header-list fl1">
            {{ menu }}
          </ul>
          {{ icon }}
        </div>

      {%- when 'left_center' -%}
        <div class="header-nav__contain wide grid">
          {{ logo }}          
          <ul class="header-list">
            {{ menu }}
          </ul>
          {{ icon }}
        </div>

      {%- when 'left_below' -%}
        <div class="header-nav__contain wide grid">
          <div class="logo-menu__wrap df fldcl">
            {{ logo }}          
            <ul class="header-list">
              {{ menu }}
            </ul>
          </div>
          {{ icon }}
        </div>

      {%- when 'center_below' -%}
      <div class="header-nav__contain wide grid">
        {{ icon_search }}
        <div class="logo-menu__wrap df fldcl">
          {{ logo }}          
          <ul class="header-list">
            {{ menu }}
          </ul>
        </div>
        {{ icon_user_cart }}
      </div>
    {%- endcase -%}
</div>

<div class="overlay"></div>



<script src="{{ 'main.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'openFunctionNav.js' | asset_url }}" defer="defer"></script>

