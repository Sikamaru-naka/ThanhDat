<div class="collection">
  <div class="collection-wrap container__small">
    <div class="collection-img">
      {%- if section.settings.image != blank -%}
        <img src="{{ section.settings.image | img_url: 'master' }}"/>
      {%- elsif section.settings.image == blank -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>

    <div class="collection-content grid wide1 {% if section.settings.options == 'center' %} text-center {% endif %} ">
      <h2 class="heading collection-heading text-color">
        {{ section.settings.heading }}
      </h2>
      <p class="collection-text {% if section.settings.options == 'center' %} width-unset {% endif %}">
        {{ section.settings.description }}
      </p>

      <a href="./shop.html" class="collection-more text-color">
        {{ section.settings.link }}
        {% if section.settings.link != blank %}
          {% render 'icon-arrow-right-white' %}
        {% endif %}
      </a>

      <button class="btn">
        <a href="./shop.html" >
          BACK TO SHOPPING NOW
        </a>
      </button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "label": "Image",
      "id": "image"
    },
    {
      "type": "text",
      "label": "Heading",
      "id": "heading",
      "default": "NEW COLLECTION 2021"
    },
    {
      "type": "text",
      "label": "Description",
      "id": "description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididu"
    },
    {
      "type": "text",
      "label": "Link",
      "id": "link",
      "default": "SEE MORE"
    },
    {
      "type": "select",
      "label": "Options content",
      "id": "options",
      "options": [
        {
          "label": "Text center",
          "value": "center"
        },
        {
          "label": "Text left",
          "value": "left"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}