              "value": "border"
            },
            {
              "label": "None",
              "value": "none"
            }
          ]
        }
      ]      
    }
  ],
  "presets": [
    {
      "name": "Service shipping",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}