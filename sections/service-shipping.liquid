
<div class="service {% if section.settings.bgc == "gray" %}  background_secondary {% endif %} ">
  <div class="service-wrap grid wide1 container__large">
    <h2 class="heading category-heading service-heading mb0">{{ section.settings.heading }}</h2>
    <p class="form-text title-product--text colors-text-secondary {% if section.settings.subheading == blank %} hidden {% endif %}">
      {{ section.settings.subheading }}
    </p>
    <div class="row pt-100">
      {% for block in section.blocks %}
        {%- liquid
          if section.blocks.size == 4
            assign footer_grid_class = 'l-3'
          elsif section.blocks.size == 3
            assign footer_grid_class = 'l-4'
          elsif section.blocks.size == 2
            assign footer_grid_class = 'l-6'
          elsif section.blocks.size == 1
            assign footer_grid_class = 'l-12'
          endif
        -%}
        <div class="col c-12 {{ footer_grid_class }} mb-20">
          <div class="service-box background-third {% if block.settings.border == 'border'%} border {% endif %} ">
            {% render 'options-icon', options-icon: block.settings.options_icon %}
            <h3 class="heading service-title {% if block.settings.heading == blank %} hidden {% endif %}">
              {{ block.settings.heading }}
            </h3>
            <p class="service-descript colors-text-secondary {% if block.settings.description == blank %} hidden {% endif %} ">
              {{ block.settings.description }}
            </p>
            <a href="{{ block.settings.more_link }}" class="collection-more service-more">
              {{ block.settings.link }}
              {% if block.settings.link != blank %}
                {% render 'icon-arrow-right-black' %}
              {% endif %}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Service shipping",
  "settings": [
    {
      "type": "text",
      "label": "Heading",
      "id": "heading",
      "default": "OUR SERVICES"
    },
    {
      "type":"text",
      "label":"subheading",
      "id":"subheading",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore"
    },
    {
      "type": "select",
      "label": "Background color",
      "id": "bgc",
      "options": [
        {
          "label" : "Gray",
          "value": "gray"
        },
        {
          "label" : "Light",
          "value": "light"
        }
      ]
    }
  ],
  "blocks": [
    {
      "name": "Column",
      "type": "column",
      "limit": 4,
      "settings": [
        {
          "type": "select",
          "label": "Options Icon",
          "id": "options_icon",
          "options": [
            {
              "label": "Box",
              "value": "box"
            },
            {
              "label": "Water",
              "value": "water"
            }
          ]
        },
        {
          "type": "text",
          "label": "Heading",
          "id": "heading",
          "default": "FREE SHIPPING IN ITALY"
        },
        {
          "type": "text",
          "label": "Description",
          "id": "description",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit"
        },
        {
          "type": "text",
          "label": "Direction",
          "id": "link",
          "default": "READ MORE"
        },
        {
          "type": "url",
          "id": "more_link",
          "label": "Link"
        },
        {
          "type": "select",
          "label": "Options Border",
          "id": "border",
          "options": [
            {
