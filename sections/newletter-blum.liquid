{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Color scheme",
      "options": [
        {
          "value": "Background 1",
          "label": "Background 1"
        },
        {
          "value": "Background 2",
          "label": "Background 2"
        },
        {
          "value": "Background 3",
          "label": "Background 3"
        }
      ],
      "default": "Background 2"
    },
    {
      "type": "header",
      "content": "content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Newsletter"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "label": "Desktop background image",
      "id": "des_bg_img",
      "info": "1600px x 800px .png recommended"
    },
    {
      "type": "image_picker",
      "label": "Mobile background image",
      "id": "mb_bg_img",
      "info": "750 x 1100px .jpg recommended. If none is set, desktop image will be cropped."
    },
    {
      "type": "range",
      "unit": "%",
      "max": 90,
      "min": 0,
      "step": 1,
      "default": 30,
      "id": "overlay_opa",
      "label": "Overlay opacity"
    }
  ],
  "presets": [
    {
      "name": "blum-newletter"
      
    }
  ]
}
{% endschema %}