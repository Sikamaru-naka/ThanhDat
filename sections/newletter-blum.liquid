
<style>
  .newletter__subheading {
    font-size: 1.6rem;
    line-height: 2rem;
  }

  .newletter__heading {
    font-size: 4.9rem;
    line-height: 5.3rem;
    margin-top: 12px;
    margin-bottom: 0;
  }

  .newletter__description {
    font-size: 1.7rem;
    line-height: 2.2rem;
    margin-bottom: 32px;
    margin-top: 14px;
  }

  .section.newletter {
    padding: 64px 0;
    background-color: #f0f0f0;
  }

  .alert-success {
    display: flex;
    align-items: center;
    
  }

  .alert-text {
    font-size: 16px;
    line-height: 20px;
    margin-left: 10px;
  }

  .icon--success,
  .alert-text--success {
    color: green;
  }

  .icon--error,
  .alert-text--error {
    color: red;
  }

</style>


<div class="section newletter">
  <div class="container">
    
    {% if section.settings.heading %}
      <h2 class="newletter__heading color-text-primary">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    
    {% if section.settings.description %}
      <div class="newletter__description color-text-primary">
        {{ section.settings.description }}
      </div>
    {% endif %}
    
    {%- form 'customer', id: formID, class: 'newletter__form' -%}
      <input type="hidden" name="contact[tags]" value="newsletter">
        {%- if form.posted_successfully? -%}
					<div class="alert alert-success " role="region" aria-live="polite" id="Newsletter-success--{{ section.id }}">
						<span class="icon icon-small icon--success  mr-12">{% render 'icon-alert-success' %}</span>
						<span class="alert-text alert-text--success">Thank you! Your submission has been received!</span>
					</div>
        {%- else -%}
          <label class="hidden" for="EmailContact">Email</label>
          <input id="EmailContact" class="element input wf" required="required" type="email" name="contact[email]" value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email" placeholder="Your email"/>
          {% if form.errors contains 'email' %}
            <div class="alert alert-error " role="region" aria-live="polite" id="Newsletter-success--{{ section.id }}">
              <span class="icon icon-small icon--error  mr-12">{% render 'icon-alert-error' %}</span>
              <span class="alert-text alert-text--error">Error!!!</span>
            </div>
          {% endif %}
        {%- endif -%}
        
        <button type="submit" class="button" >
          {{ section.settings.btn_label }}
        </button>

    {%- endform -%}

