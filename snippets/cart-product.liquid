          <input class="hidden" min="1" type="number" id="quantity" name="quantity" value="1"/>
          <button type="submit" name="add" class="btn btn-feature">
            <span class="">
              {{ "products.product.add_cart" | t }}
            </span>
          </button>
        </form>
    </div>
  
{% endif %}



  
